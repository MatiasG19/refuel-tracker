<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@drawable/splash</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.Dark" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@drawable/splash</item>
        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="android:colorBackground">@color/colorPrimary_dark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark_dark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark_dark</item>
    </style>

    <style name="Theme.Light" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@drawable/splash</item>
        <item name="colorPrimary">@color/colorPrimary_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_light</item>
        <item name="android:colorBackground">@color/colorPrimary_light</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark_light</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark_light</item>
    </style>
</resources>
